<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kjj.alibaba.com.kjj.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="线性布局"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="相对布局"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_fra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="帧布局"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="按钮第一种点击方式"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="按钮第二种点击方式"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="threeClick"
                android:text="按钮第三种点击方式"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="跳转"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_hand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="消息机制"
                android:textSize="18sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="11dp">

                <LinearLayout
                    android:id="@+id/lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="一"
                        android:textSize="18sp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="二"
                        android:textSize="18sp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="三"
                        android:textSize="18sp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="四"
                        android:textSize="18sp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="五"
                        android:textSize="18sp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    >

                    <Button
                        android:id="@+id/middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="居中"
                        android:textSize="18sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="右上角"
                        android:textSize="18sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="左下角"
                        android:textSize="18sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/middle"
                        android:layout_centerHorizontal="true"
                        android:text="居中按钮下面"
                        android:textSize="18sp" />

                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/fra"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_fra"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#0f0"

                        />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:clickable="true" />


                </FrameLayout>

            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
